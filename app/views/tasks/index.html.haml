%h3 タスクリスト✔

%table.table.table-striped
  %thead
    %tr
      %th タスク名
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.name
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to '新規作成', new_task_path, class: 'btn btn-primary'
